<!--The Main Window View -->

<table>


  <tbody>
   
    <br />  
    <h1 id="mainWindowHeader">Restaurant Reviews</h1>
    <br />
    <br />
    <% for article_post in @article_posts %>
      <tr>
        <tr>
          <td>
            <%= link_to article_post.title, article_post %>  submitted by <%= article_post.poster %><br />
            <%= article_post.date %><br />
            <%= article_post.article %><br /><br />
            <div class="indexIdInfo">id Value: <%= article_post.id %><br/></div>
          </td>
        </tr>
        <tr>
          
          <td><%= link_to 'Show', article_post %>
            <% if controller.allow_access_if_owner_name_is_or_rank_at_least("#{article_post.poster}", 1) %>
              <%= link_to 'Edit', edit_article_post_path(article_post) %>
              <%= link_to 'Delete', article_post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
            <% end %>
          </td>
        </tr>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<br />
<%= link_to 'New post', new_article_post_path %>
<%= link_to 'RSS Feed', "article_posts.rss"%> 


