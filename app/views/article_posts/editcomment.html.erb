<!-- old edit comments view -->
<!-- left here for educational purpose on how to create a form using 'form_tag' instead of form -->

<h2>Edit Comment:</h2>


<% commentToEdit = Comment.find(params[:commentid])%>
<% comment_id_value = commentToEdit.id %>
<% article_post_id = params[:article_post_id].to_s %>
<br />
Comment ID: <%= commentToEdit.id %> <br /><br />
Comment Text: <%= commentToEdit.comment%> <br /><br />


<!--Display current user comment and allow for update. -->
<%= form_tag :action => :update_comment, :commentid => "#{comment_id_value}", :article_post_id => "#{article_post_id}" do %>


<%= text_area_tag :commentText, commentToEdit.comment %>
<br />
<br />
<%= submit_tag "Update Comment" %>
<br />
<% returnPage = article_post_path "#{article_post_id}"%>
<%= link_to 'Back', returnPage %>
<% end %> 

